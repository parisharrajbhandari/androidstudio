<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#E7E7E7"
    tools:context=".exams">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#616FBA"
        android:layout_marginBottom="40dp"
        android:layout_gravity="start">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:textColor="@color/white"
            android:text="Exams"
            android:textStyle="bold"
            android:textSize="25sp"
            />
        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="30dp"
            android:layout_gravity="right"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/pp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pp"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:drawableStart="@drawable/baseline_arrow_back_24"/>

    </com.google.android.material.navigation.NavigationView>



    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="210dp"
        app:cardCornerRadius="30dp"
        android:backgroundTint="#6972A4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic Algebra"
            android:textSize="20sp"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="5dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maths101"
            android:textSize="15sp"
            android:paddingLeft="20dp"
            android:textColor="@color/white"/>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="January 10, 2022 \n Class 3B"
                android:textSize="15sp"
                android:paddingLeft="20dp"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/signup"
                android:layout_marginTop="20dp"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:text="Sign up"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
        </LinearLayout>
            <ImageView
                android:layout_gravity="center"
                android:layout_width="160dp"
                android:layout_height="170dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/bg4"
                android:scaleType="centerCrop"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="210dp"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#E0AE19">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shifts in Production\n Possibility Curve"
                    android:textSize="20sp"
                    android:paddingTop="20dp"
                    android:paddingLeft="20dp"
                    android:paddingBottom="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Macroeconomics"
                    android:textSize="15sp"
                    android:paddingLeft="20dp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Februrary 2, 2022 \n Online"
                    android:textSize="15sp"
                    android:paddingLeft="20dp"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/signup2"
                    android:layout_marginTop="10dp"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:text="Sign up"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <ImageView
                android:layout_gravity="center"
                android:layout_width="160dp"
                android:layout_height="170dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/bg5"
                android:scaleType="centerCrop"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/anotherexam"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginTop="60dp"
        android:text="Sign Up For Another Exam"
        android:backgroundTint="#616FBA"/>



</LinearLayout>