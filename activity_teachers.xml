<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#E7E7E7"
    tools:context=".teachers">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#616FBA"
        android:layout_marginBottom="40dp"
        android:layout_gravity="start">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:textColor="@color/white"
            android:text="Exams"
            android:textStyle="bold"
            android:textSize="25sp"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="30dp"
            android:layout_gravity="right"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/pp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/pp"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:drawableStart="@drawable/baseline_arrow_back_24"/>

    </com.google.android.material.navigation.NavigationView>

    <androidx.cardview.widget.CardView
        android:layout_width="390dp"
        android:layout_height="90dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/pp3"
                />
            </androidx.cardview.widget.CardView>

            <TextView
                android:padding="15dp"
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="19dp"
                android:text="Mr.Rahul Lohani "
                />
            <Button
                android:id="@+id/call1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Button.Icon"
                app:icon="@drawable/baseline_call_24"
                android:padding="10dp"
                android:layout_marginRight="10dp"
                />
            <Button
                android:id="@+id/email1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                style="@style/Widget.Material3.Button.Icon"
                app:icon="@drawable/baseline_email_24"
                android:padding="10dp"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="390dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="15dp">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="30dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/pp1"
                    android:scaleType="centerCrop"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:padding="15dp"
                android:layout_width="210dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="19dp"
                android:text="Mr.Rupak Chaudhary "
                />
            <Button
                android:id="@+id/call3"
                android:layout_width="40dp"
